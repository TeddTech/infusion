/* Preferences Editor Separated Panel styles */
@media all and (max-width: 639px) {

    body.fl-prefsEditor-separatedPanel {
        overflow-y: auto;
        padding: 0px;

        .fl-prefsEditor-panels {
            min-height: min-content;
            flex-flow: column nowrap;
            padding: 0px;
            margin: 0px;

            .fl-prefsEditor-panel {
                overflow: auto;
                margin 0px;
                min-width: 23em;
                box-sizing: border-box;
                height: 100vh;
                border: none;
                box-shadow: none;
                border-radius(0px);

                div {
                    > h2 {
                        display: flex;
                        margin-bottom: 0.5em;
                        padding: 0px;
                        box-shadow: none;
                        border-bottom: none;

                        > span:first-of-type {
                            display: none;
                        }

                        > * {
                            margin: 0px auto;
                            font-size: 1.1em;
                        }
                    }
                }

                .flc-prefsEditor-text-size {
                    .fl-inputs {
                        display: flex;
                        justify-content: center;
                        margin-top: 1.2em;

                        .flc-textfieldButtons-field {
                            box-sizing: border-box;
                            width: 6em;
                            height: 2em;
                            border: 1px solid #a7a9ac;
                            border-radius(0.25em);
                            text-align: center;
                        }

                        .flc-textfieldButtons-button {
                            box-sizing: border-box;
                            display: flex;
                            cursor: pointer;
                            width: 2em;
                            height: 2em;
                            border: 2px solid #4d4e4e;
                            border-radius(0.25em);
                            color: #4d4e4e;

                            .fl-sign-container {
                                margin: auto;
                                font-size: 2em;
                                vertical-align: middle;
                            }
                        }

                        .fl-decrease-button {
                            margin-right: 0.5em;
                            padding-bottom: 0.3em;
                        }

                        .fl-increase-button {
                            margin-left: 0.5em;
                            padding-bottom: 0.1em;
                            padding-left: 0.1em;
                        }
                    }
                }

                .flc-prefsEditor-contrast {
                    display: flex;
                    flex-flow: row wrap;
                    
                    h2 {
                        flex: 1 100%;
                    }

                    p {
                        display: none;
                    }

                    .flc-prefsEditor-themeRow {
                        flex: 1 auto;

                        label {
                            display: block;
                            margin: 0px auto;
                        }
                    }

                    > div:first-of-type {
                        margin-left: 5%;
                    }

                    > div:last-of-type {
                        margin-right: 5%;
                    }
                }
            }
        }
    }
}

.fl-prefsEditor-separatedPanel {
    background-color: #fff;
    background-image: url('../images/default/separatedpanelbg.png');
    background-repeat: repeat;
    height: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    color: #766d68;
    padding: 1px 0px;
    margin: 0px;

    .fl-prefsEditor {
        font-family: 'OpenSans',"Myriad Pro", Helvetica, Arial, sans-serif;
        line-height: 1.2em !important; // FLUID-4959: fix the line height so it doesn't scale with the Preferences Editor line space scaling.
    }

    // Preference Panels
    .fl-prefsEditor-panels {
        white-space: nowrap;
        display: flex;
        flex-flow: row nowrap;
        padding: 0px 10px;

        .fl-prefsEditor-panel {
            border: 1px solid #615e59;
            border-radius: 5px;
            box-shadow: 2px 2px #7a766d;
            display: block;
            margin: 0px 10px;
            padding: 1em;
            min-width: 25em;
            background-color: #fff;
            white-space: normal;
        }
    }

    h2 {
        color: #766d68;
        padding: 0 0 0.5em 0;
        margin: 0 0 1.5em 0;
        width: 100%;
        border-bottom: solid #ccc 1px;
        box-shadow: 0px 6px 7px -6px rgba(0,0,0,0.3);
        font-size: 1.2em;
        text-transform: lowercase;
        line-height:1.7em;
        height: 2em;
    }

    .fl-inputs {
        float: none;
        padding: 0;
    }

    label {
        font-size: 1em;
        display: block;
    }

    // Table of Contents switch
    .fl-prefsEditor-separatedPanel-toc {
        width: 6em;
        height:2em;
        margin-right:10px;
        float:left;

        label {
            line-height: 1.7em !important;
        }
    }

    // Emphasize links buttons panel
    .fl-links-buttons-options {
        label {
            width: 21em;
            display:inline-block;
        }

        li {
            margin-bottom: 0.4em;
        }
    }

    h2 {
        label, .heading-text {
            float: left;
            padding-top: 0.2em;
            font-size: 1.3em;
            font-weight: 600;
        }
    }

    // Font Icons
    .fl-icon-next, .fl-icon-prev {
        font-family: 'InfusionIcons' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        -webkit-font-smoothing: antialiased;
        float: left;
        margin: 0.2em 0.3em 0 0;
        font-size: 1.5em;
    }

    .fl-icon-next:before {
        content: "\e001";
    }

    .fl-icon-prev:before {
        content: "\e002";
    }
}

